{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "types": ["fvtt-types"],
    "target": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "rootDir": "src",
    "outDir": "dist"
  }
}
